<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.game.ViewLawFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/view_laws_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/presidential_power" />

    <TextView
        android:id="@+id/view_laws_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/view_laws_desc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_view_law_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/view_law_desc"
            android:src="@drawable/loyalist_card" />

        <ImageButton
            android:id="@+id/button_view_law_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/view_law_desc"
            android:src="@drawable/loyalist_card" />

        <ImageButton
            android:id="@+id/button_view_law_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/view_law_desc"
            android:src="@drawable/loyalist_card" />

    </LinearLayout>

</LinearLayout>