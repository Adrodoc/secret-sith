<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    tools:context=".ui.game.DiscardPolicyFragment">

    <TextView
        android:id="@+id/discard_laws_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/overlayBackground"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/discard_laws_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discard_laws_header">

        <ImageView
            android:id="@+id/discard_policy_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/law_desc"
            android:src="@drawable/loyalist_card" />

        <ImageView
            android:id="@+id/discard_policy_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/law_desc"
            android:src="@drawable/loyalist_card" />

        <ImageView
            android:id="@+id/discard_policy_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/law_desc"
            android:src="@drawable/loyalist_card" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
